{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    "forwardPorts": [
        5231
    ],
    "portsAttributes": {
        "5231": {
            "label": "workflow-api-http",
            "visibility": "public",
            "protocol": "http"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "installBicep": true
        },
        "ghcr.io/devcontainer-community/devcontainer-features/astral.sh-uv:1": {},
        // Temporarily disabled due to https://github.com/devcontainers/features/issues/1543
        // "ghcr.io/devcontainers/features/docker-in-docker:2": {
        //     "version": "latest",
        //     "enableNonRootDocker": "true"
        // },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        "ghcr.io/devcontainers/features/dotnet:2": {
            "version": "10.0",
            "installUsingApt": true
        }
    },
    "postCreateCommand": "pip3 install --upgrade pip && pip3 install --user -r requirements.txt && bash .devcontainer/setup-dotnet.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "github.copilot",
                "github.copilot-chat",
                "ms-azuretools.vscode-azurefunctions",
                "ms-python.autopep8",
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.vscode-python-envs",
                "ms-dotnettools.csdevkit",
                "ms-dotnettools.csharp",
                "ms-dotnettools.vscode-dotnet-runtime",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "benjaminbenais.copilot-theme",
                "Azurite.azurite",
                "ms-azuretools.vscode-azurestorage",
                "ms-azuretools.vscode-bicep",
                "vs-publisher-1448185.keyoti-changeallendoflinesequence",
                "ms-windows-ai-studio.windows-ai-studio",
                "mechatroner.rainbow-csv",
                "kejun.markdown-alert",
                "humao.rest-client",
                "github.github-vscode-theme"

            ],
            "settings": {
                "workbench.colorTheme": "GitHub Dark Default"
            }
        }
    }
}